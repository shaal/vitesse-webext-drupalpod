{
  "packages": [
    "nodejs@latest",
    "nodePackages.pnpm@latest",
    "firefox-bin@latest"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null",
      "pnpm install",
      "echo 'Run in first terminal: pnpm dev'",
      "echo 'Run in a separate terminal: pnpm start:firefox'"
    ],
    "scripts": {
      "run_test": "pnpm run start",
      "test": [
        "echo \"Error: no test specified\" && exit 1"
      ]
    }
  }
}
